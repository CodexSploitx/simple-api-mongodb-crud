# ============================================
# MongoDB Configuration
# ============================================

# MongoDB Connection URI
MONGODB_URI=mongodb://localhost:27017

# Or use individual connection parameters:
# MONGODB_HOST=localhost
# PORT_MONGODB=27017
# MONGODB_USERNAME=your_username
# MONGODB_PASSWORD=your_password

# Test Database (optional)
MONGODB_TEST_DB=testdb
MONGODB_TEST_COLLECTION=testcollection

# ============================================
# API Configuration
# ============================================

# Base URL for your API
API_BASE_URL=http://localhost:3000

# API Token for authentication (generate a secure random string)
API_TOKEN=your_secure_api_token_here

# API Timeout in milliseconds
API_TIMEOUT=10000

# Public API Token (if needed for client-side)
NEXT_PUBLIC_API_TOKEN=your_public_api_token_here

# ============================================
# Super Admin Access (Optional)
# ============================================

ADMIN_USER=admin@example.com
ADMIN_PASSWORD=your_secure_password
ADMIN_ROLE=admin

# ============================================
# User Authentication Database
# ============================================

# Database and collection for storing users
AUTH_DB_USERS=authusersdb
AUTH_DB_COLLECTION=users

# Canonical names (compatibility)
USERS_DB=authusersdb
USERS_COLLECTION=users

# ============================================
# Rate Limiting Configuration
# ============================================

RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=300000
LOCKOUT_MS=1800000
RATE_LIMIT_JITTER_BASE_MS=120
RATE_LIMIT_JITTER_VARIATION_MS=100

# ============================================
# JWT Configuration
# ============================================

# JWT Secret (generate a secure random string, min 32 characters)
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_EXPIRATION=1h

# ============================================
# Auth Client Configuration
# ============================================

# Database and collection for Auth Client users
AUTH_CLIENT_DB=authclient
AUTH_CLIENT_COLLECTION=users

# JWT Secret for Auth Client (generate a secure random string, min 32 characters)
JWT_AUTH_CLIENT=your_auth_client_jwt_secret_min_32_chars
JWT_AUTH_CLIENT_EXPIRATION=1h

# CORS Configuration
CORS=false
CORS_AUTH_CLIENT=http://localhost:3000

# Enable Relational Database for Auth Client and Active RLS
RELACIONALDB_AUTH_CLIENT=true

# ============================================
# Auth Client Admin Dashboard
# ============================================

# Admin credentials for accessing /auth-client dashboard
USERNAME_AUTH_CLIENT=admin
PASSWORD_AUTH_CLIENT=your_secure_admin_password

# JWT Secret for Admin Dashboard operations (generate a long random string)
JWT_AUTH=your_admin_dashboard_jwt_secret_very_long_random_string

# ============================================
# IMPORTANT SECURITY NOTES:
# ============================================
# 1. Never commit .env.local with real credentials to version control
# 2. Generate strong random strings for all JWT secrets and API tokens
# 3. Use different secrets for production and development
# 4. Recommended tool for generating secrets: https://it-tools.tech/token-generator
# 5. Change default admin credentials immediately after setup