{
  "name": "simple-api-mongodb-crud",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "cls && next dev",
    "generate": "node scripts/generate-env.mjs",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "mongotest": "npx ts-node mongo-test.ts",
    "test": "npx tsx test-connection/test-runner.ts all",
    "test:all": "npx tsx test-connection/test-runner.ts all",
    "test:mongo": "npx tsx test-connection/test-runner.ts mongo",
    "test:api": "npx tsx test-connection/test-runner.ts api",
    "test:export": "npx tsx test-connection/test-runner.ts all --export=test-results.json",
    "test:debug": "cross-env LOG_LEVEL=DEBUG npx tsx test-connection/test-runner.ts",
    "test:watch": "npx nodemon --exec \"npm run test\" --ext ts,js,json",
    "test:with-server": "concurrently -k --success first \"npm run dev\" \"wait-on http://localhost:3000 && npm run test:all\"",
    "test:auth-client": "npx tsx app/api/auth-client/scripts/test.ts",
    "test:magic-link": "npx tsx app/api/auth-client/scripts/Magiclink.test.ts",
    "test:change-email": "npx tsx app/api/auth-client/scripts/ChangeEmail.test.ts",
    "test:reset-password": "npx tsx app/api/auth-client/scripts/ResetPassword.test.ts",
    "test:create-users": "npx tsx app/api/auth-client/scripts/CreateTestUsers.test.ts"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "dotenv": "17.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "6.18.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "4.1.0",
    "nodemailer": "6.9.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3",
    "@rushstack/eslint-patch": "^1.15.0",
    "@tailwindcss/postcss": "4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "concurrently": "^9.0.0",
    "cross-env": "7",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.5.0",
    "nodemon": "3",
    "start-server-and-test": "^2.0.1",
    "tailwindcss": "4",
    "tsx": "4",
    "typescript": "5",
    "wait-on": "^7.0.1",
    "@types/nodemailer": "6"
  }
}
